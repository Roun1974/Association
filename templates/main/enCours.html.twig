{% extends 'base.html.twig' %}

{% block title %} Les projets en cours {% endblock %}

{% block body %}
 {% include('inc/slides.html.twig') %}
     <section id="inner-headline">
      <div class="container">
        <div class="row">
          <div class="span4">
            <div class="inner-heading">
               <h2>Projets<strong> en cours</strong></h2>
            </div>
          </div>
          <div class="span8">
            <ul class="breadcrumb">
              <li><a href="#"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
              <li><a href="#">Projets en cours</a><i class="icon-angle-right"></i></li>
              <li class="active">Détails du Projet</li>
            </ul>
          </div>
        </div>
      </div>
    </section>
    <section id="content">
      <div class="container">
        <div class="row">
          <div class="span8">
            <article>
              <div class="top-wrapper">
                <div class="post-heading">
                </div>
                <!-- start flexslider -->
                
                <div class="flexslider">
                  <ul class="slides">
               
                 <li>
                  <img src="assets/img/works/full/image-16-full.jpg" alt="" />
                </li>
                <li>
                  <img src="assets/img/works/full/image-13-full.jpg" alt="" />
                </li>
              </ul>
                </div>
                <!-- end flexslider -->
              </div>
              {% for projetEnCour in projetEnCours %}
             <div class="container mt-5 mb-5" style="max-width: 750px;">
             <div class="row">
                 <div class="card p-3">
                    <div class="col">
                    <h1 class="lead">{{ projetEnCour.nom }}</h1> 
                    <div style="justify">
                {{ projetEnCour.description |raw}}
              </div>
                    </div>
                 </div>
            </div>  
      </div>
           {% endfor %}     
            </article>
          </div>
          <div class="span4">
            <aside class="right-sidebar">
              <div class="widget">
                <h5 class="widgetheading">Information sur le project </h5>
                <ul class="folio-detail">
                  <li><label>Catégories :</label> Projets</li>
                  <li><label>Partenaires :</label> </li>
                  
                </ul>
              </div>
               {% for projetEnCour in projetEnCours %}
              <div class="widget">
                <h5 class="widgetheading">{{ projetEnCour.nom }}</h5>
                <p>
                   {{ projetEnCour.description|u.truncate(270,'...')|raw }}
                </p>
              </div>
               {% endfor %}  
            </aside>
          </div>
        </div>
      </div>
    </section>
{% endblock %}


