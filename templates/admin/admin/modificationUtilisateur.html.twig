{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modification {{ utilisateur.nom ~ ' ' ~ utilisateur.prenom }}</h1>
    {{ form_start(form)}}
        <div class="row">
            <div class="col-6">
                {{ form_row(form.nom) }}
                {{ form_row(form.prenom) }}
                {{ form_row(form.rue) }}
                {{ form_row(form.codePostal) }}
                {{ form_row(form.ville) }}
            </div>
            <div class="col-6">
                {{ form_row(form.pays) }}
                {{ form_widget(form)}}
            </div>
        </div>
        <input type="submit" class="btn btn-primary" value="Enregistrer">
    {{ form_end(form) }}
{% endblock %}

{% block title %}Modification d'un utilisateur{% endblock %}

