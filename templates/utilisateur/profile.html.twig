{% extends 'base.html.twig' %}

{% block title %} Profile de : {{ app.user.nom }} {{ app.user.prenom }} {% endblock %}

{% block body %}
      
    <section id="content">
      <div class="container mt-5 mb-5" >
        <!-- Default table -->
       
          <div class="span6">
            <h3> Profile de : {{ app.user.nom }} <strong>{{ app.user.prenom }} <strong></h3>
            <table class="table">
              <thead>
                <tr>
                  <th>
                   Nom 
                  </th>
                  <th>
                    Pr√©nom
                  </th>
                  <th>
                    Email
                  </th>
                  <th>
                   Actions
                  </th>
                </tr>
              </thead>
              <tbody>
                <tr class="success">
                  <td>
                    {{ app.user.nom }}
                  </td>
                  <td>
                    {{ app.user.prenom }}
                  </td>
                  <td>
                   {{ app.user.email }}
                  </td>
                  <td >
                  <a href="#" data-toggle="modal">Modifier</a>
                  </td>
                   
                </tr>
                
              </tbody>
            </table>
              {% for annonce in app.user.annonces %}
        
            <article>
              <div class="row">
                <div class="span8">
                  <div class="post-slider">
                    <div class="post-heading">
                      <h5>Titre de l'annonce : {{ annonce.title }}</h5>
                    </div>
                   
                  
                    {{ annonce.content|raw}}
                 
                  <div class="bottom-article">
                    <ul class="meta-post">
                      <li><i class="icon-calendar"></i><a href="#"> Mar 23, 2013</a></li>
                      <li><i class="icon-user"></i><a href="#">  {{ app.user.nom }}  {{ app.user.prenom }}</a></li>
                      <li><i class="icon-folder-open"></i><a href="#">  {{ annonce.title }}</a></li>
                      <li><i class="icon-comments"></i><a href="#"> {{ app.user.annonces|length }} Comments</a></li>
                    </ul>
                    
                  </div>
                </div>
              </div>
            </article>
           
            {% endfor %}
           
          </div>
        </div>

      </div>
      
    </section>
 
    
{% endblock %}
