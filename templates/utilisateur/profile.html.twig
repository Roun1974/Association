{% extends 'base.html.twig' %}

{% block title %} Profile de : {{ app.user.nom }} {{ app.user.prenom }} {% endblock %}

{% block body %}
      
    <section id="content">
      <div class="container mt-5 mb-5" >
        <!-- Default table -->
       
          <div class="span6">
            <h3> Profile de : {{ app.user.nom }} {{ app.user.prenom }} </h3>
            <table class="table">
              
              <tbody>
                <tr class="success">
                  <td>
                   <strong> Nom :<strong>
                  </td>
                  <td>
                   <strong> {{ app.user.prenom }}<strong>
                  </td>
                </tr>
                <tr class="error">
                  <td>
                   <strong> Prenom :<strong>
                  </td>
                  <td>
                    {{ app.user.nom }}
                  </td>
                </tr>
                <tr class="success">
                  <td>
                   <strong> E- mail :<strong>
                  </td>
                  <td>
                    {{ app.user.email}}
                  </td>
                </tr>
                 <tr class="warning">
                  <td>
                   <strong>  Téléphone :<strong>
                  </td>
                  <td>
                    {{ app.user.telephone}}
                  </td>
                </tr>
                 <tr class="success">
                  <td>
                   <strong> Rue :<strong>
                  </td>
                  <td>
                    {{ app.user.rue}}
                  </td>
                </tr>
                 <tr class="info">
                  <td>
                   <strong> Code postal :<strong>
                  </td>
                  <td>
                    {{ app.user.codepostal}}
                  </td>
                </tr>
                <tr class="success">
                  <td>
                   <strong> Ville :<strong>
                  </td>
                  <td>
                    {{ app.user.ville}}
                  </td>
                </tr>
                <tr class="primary">
                  <td>
                   <strong> Pays :<strong>
                  </td>
                  <td>
                    {{ app.user.pays}}
                  </td>
                </tr>
                <tr class="success">
                  <td>
                   <strong>Action :<strong>
                  </td>
                  <td>
                   <a  href="{{ path('utilisateur_editProfile') }}">Modifier mon Profile</a>
                  </td>
                </tr>
                
                
                
              </tbody>
            </table>
              {% for annonce in app.user.annonces %}
        
            <article>
              <div class="row">
                <div class="span8">
                  <div class="post-slider">
                    <div class="post-heading">
                      <h5>Titre de l'annonce : {{ annonce.title }}</h5>
                    </div>
                   
                  
                    {{ annonce.content|raw}}
                 
                  <div class="bottom-article">
                    <ul class="meta-post">
                      <li><i class="icon-calendar"></i><a href="#"> Mar 23, 2013</a></li>
                      <li><i class="icon-user"></i><a href="#">  {{ app.user.nom }}  {{ app.user.prenom }}</a></li>
                      <li><i class="icon-folder-open"></i><a href="#">  {{ annonce.title }}</a></li>
                      <li><i class="icon-comments"></i><a href="#"> {{ app.user.annonces|length }} Comments</a></li>
                    </ul>
                    
                  </div>
                </div>
              </div>
            </article>
           
            {% endfor %}
           
          </div>
        </div>

      </div>
      
    </section>
 
    
{% endblock %}
