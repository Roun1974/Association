{% extends 'base.html.twig' %}
{% block title %}Les commentaires{% endblock %}
{% block body %}

  {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
<section id="content">
      <div class="container">
        <div class="row">
          <div class="span4">
            <aside class="left-sidebar">
              <div class="widget">
              </div>
              <div class="widget">
                <h5 class="widgetheading">Categories</h5>
 {% for projet in projets %}
                <ul class="cat">
                  <li><i class="icon-angle-right"></i><a href="#">Projets :</a><span> {{ projet.nom }}</span></li>
                </ul>
                  {% endfor %}
              </div>
            </aside>
          </div>
          {% for projet in projets %}
          <div class="span8">
            <article>
              <div class="row">
                <div class="span8">
                  <div class="post-image">
                    <div class="post-heading">
                      <h4><a href="#">{{ projet.nom }}</a></h4>
                    </div>
                  </div>
                  <p>
                    {{ projet.description }}
                  </p>
                  <div class="bottom-article">
                    <ul class="meta-post">
                      <li><i class="icon-user"></i><a href="#"> {{ app.user.nom }} {{ app.user.prenom }}</a></li>
                      <li><i class="icon-folder-open"></i><a href="#"> Commentaires</a></li>
                      <li><i class="icon-tags"></i><a href="#">Projets</a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </article>
            
              <h4 class="lead">Commentaires</h4>
              {% for commentaire in projet.commentaires %}
            <div class="comment-area">
              <div class="media">
                <div class="media-body">
                  <div class="media-content">
                    <h6><span>Publi√© par :</span> {{ app.user.nom }} {{ app.user.prenom }}  <span> le 22 mai 2022<span></h6>
                    <p>
                     {{ commentaire.commentaire|raw }}
                    </p>
                  </div> 
                </div>
              </div>{% endfor %}
               {% endfor %}
              <div class="pagination"><ul> <li class="disabled"><a href="#">Prev</a></li> <li class="active"><a href="#">1</a></li> <li><a href="#">2</a></li> <li><a href="#">3</a></li><li><a href="#">4</a></li> <li><a href="#">5</a></li><li><a href="#">Next</a></li> </ul> </div>
            </div>
          </div>
        </div>
      </div>
    </section>
{% endblock %}
