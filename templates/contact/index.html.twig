{% extends 'base.html.twig' %}

{% block title %}Formulaire de contact{% endblock %}

{% block body %}
 <div class="container">
        <div class="row">
          <div class="span12">
{{ form_start(form) }}
    {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}


</div>
<div class="form-group">
    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}

</div>
<div class="form-group">
    {{ form_row(form.message, {'attr': {'class': 'form-control'}}) }}

</div>

<div class="form-group">
    <input type="submit" value="Send" class="btn btn-primary py-3 px-5">
</div>
{{ form_end(form) }}
</div>
</div>
</div>
{% endblock %}
